@model ProductListViewModel
    

<partial name="_header">
        
@if(Model.Products.Count==0)
{
   @await Html.PartialAsync("_product");
}
else
{
   <div class="row">                  
                        @foreach (var product in @Model.Products)
                        {    
                        <div class="col-md-4">
                            @await Html.PartialAsync("_product",product)
                        </div>       
                        
                        }   
                    </div>
}
